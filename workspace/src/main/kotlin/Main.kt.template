import io.github.takahirom.codingagentextension.model.*
import io.github.takahirom.codingagentextension.claudecode.writeToClaudeCode
import java.nio.file.Path

fun main() {
    val outputDir = Path.of("output")

    // 1. Create a plugin with command and skill
    val plugin = Plugin.Builder(
        name = "my-plugin",
        description = "My awesome plugin",
        version = "1.0.0"
    )
        .author(name = "My Team")
        .addCommand(
            Command.Builder("greet", "Say hello", "# Greet Command\n\nSay hello to the user.").build()
        )
        .addSkill(
            Skill.Builder(
                "coding-style",
                "Coding style guidelines",
                """
                    # Coding Style

                    - Use 4 spaces for indentation
                    - Max line length: 120 characters
                """.trimIndent()
            ).build()
        )
        .build()

    // 2. Create marketplace with the plugin
    val marketplace = Marketplace.Builder(
        name = "my-marketplace",
        owner = Owner(name = "My Team", email = "team@example.com")
    )
        .addPlugin(plugin)
        .build()

    // 3. Write everything with a single call
    marketplace.writeToClaudeCode(outputDir)

    println("Done! Check output/my-marketplace/")
}
